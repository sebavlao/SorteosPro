                        <p>Telefono: <strong><%= personaSorteada.telefono.substring(0, 4) + "..." %></strong></p>
                    </div>
                <% } %>
            </article>
            <article class="self-center flex gap-4">
                <form method="POST">
                    <button class="hover:bg-slate-950 border-slate-950 text-slate-950 hover:text-white font-bold border-2 border-solid px-16 py-2 rounded-full transition duration-300 ease-in-out">Â¡Sortear!</button>
                </form>
                <% if (personaSorteada !== undefined) { %>
                    <form id="form" class="hidden" method="POST">
                        <input type="hidden" value="<%= personaSorteada.id %>" name="id">
                        <input type="hidden" value="<%= personaSorteada.dni %>" name="dni">
                        <input type="hidden" value="<%= personaSorteada.nombre %>" name="nombre">
                        <input type="hidden" value="<%= personaSorteada.apellido %>" name="apellido">
                        <input type="hidden" value="<%= personaSorteada.nacimiento %>" name="nacimiento">
                        <input type="hidden" value="<%= personaSorteada.email %>" name="email">
                        <input id="mount" type="hidden" value="" name="mount">
                        <button id="btn_pdf" class="hover:bg-purple-900 border-purple-900 text-purple-900 hover:text-white font-bold border-2 border-solid px-16 py-2 rounded-full transition duration-300 ease-in-out">Ver PDF</button>
                    </form>
                <% } %>
            </article>
        </section>
    </main>
    <script src="/js/admin/admin.js"></script>
</body> 
</html>